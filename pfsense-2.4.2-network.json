{
  "variables": {
    "vm_name": "pfsense_vbox",
    "cpu": "2",
    "guest_os_type": "FreeBSD_64",
    "ram_size": "2048",
    "disk_size": "8192",
    "post_shutdown_delay": "1m",
    "export_product": "pfSense",
    "export_producturl": "https://www.pfsense.org",
    "export_vendor": "pwasiewi",
    "export_vendorurl": "https://github.com/pwasiewi",
    "export_version": "2.4.2",
    "export_repository": "https://github.com/pwasiewi/packer-pfSense",
    "http_directory": "./files/http/pfsense/network",
    "interface_mgmt_bridgeadapter0": "vboxnet0",
    "interface_mgmt_bridgeadapter1": "vboxnet1",
    "bridgeadapter": "enp0s31f6",
    "iso_checksum_type": "sha256",
    "iso_checksum": "3fa30cac9b8519e89a176ca8845a5a9536af0e11226f2ec9bcaf85ebcab40416",
    "iso_url": "/mnt/dd/IMAGES/pfSense-CE-2.4.2-RELEASE-amd64.iso",
    "wan_host": "192.168.0.101",
    "wan_gate": "192.168.0.1",
    "ssh_host": "192.168.0.101",
    "ssh_username": "root",
    "ssh_password": "packer",
    "virtualbox_version": "5.2.8"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "{{user `vm_name`}}",
      "format": "ova",
      "guest_os_type": "{{user `guest_os_type`}}",
      "headless": true,
      "boot_wait": "60s",
      "boot_command": [
        "A",   "<enter>", "<wait>",
        "<enter>", "<enter>",
        "<wait10><wait10><wait10><wait10><wait10><wait10>",
	"<tab>","<enter>",
        "cp /conf/config.xml /conf/config.xml.org", "<enter>", "<wait>",
        "reboot", "<enter>", 
	"<wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10>",
        "8", "<enter>", "<wait>",
        "pkg update", "<wait>", "<enter>", "<wait10>",
        "pkg install -y pfSense-pkg-sudo", "<wait>", "<enter>", "<wait10><wait10>",
        "chmod 660 /usr/local/etc/sudoers", "<enter>", "<wait5>",
        "echo 'vagrant ALL=(ALL) NOPASSWD: ALL' >> /usr/local/etc/sudoers", "<enter>", "<wait>",
        "echo '%wheel ALL=(ALL) NOPASSWD: ALL' >> /usr/local/etc/sudoers", "<enter>", "<wait>",
        "chmod 440 /usr/local/etc/sudoers", "<enter>", "<wait5>",
	"echo 'PermitRootLogin yes' >> /etc/sshd_extra","<enter><wait>",
        "exit", "<enter>",
        "14", "<enter>", "<wait>",  "y", "<enter>","<wait10>",
	"1", "<enter>", "n", "<enter>",
	"em1", "<enter>",
	"em2", "<enter>",
	"em3", "<enter>",
	"em0", "<enter>", 
	"y", "<enter>", "<wait10>", "<wait10>", "<wait10>", "<wait10>", "<wait10>",
	"2", "<enter>", "4", "<enter>", 
	"10.0.2.15", "<enter>", "24", "<enter>",
	"10.0.2.2", "<enter>", "<enter>", "n", "<enter>", "n", "<enter>", "<wait5>", "<enter>",
	"2", "<enter>", "1", "<enter>", "n", "<enter>",
	"{{user `wan_host`}}", "<enter>", "24", "<enter>",
	"{{user `wan_gate`}}", "<enter>", "n", "<enter>", "<enter>", "n", "<enter>", "<wait5>", "<enter>",
        "8", "<enter>", "<wait>",
        "cp /conf/config.xml /conf/config.xml.orig", "<enter>", "<wait>",
        "curl -sfSL {{ .HTTPIP }}:{{ .HTTPPort }}/config.xml -o /conf/config.xml", "<enter>", "<wait5>",
        "exit", "<enter>",
	"5", "<enter>", "r", "<enter>"
	
      ],
      "export_opts": [
        "--manifest",
        "--vsys",        "0",
        "--product",     "{{user `export_product`}}",
        "--producturl",  "{{user `export_producturl`}}",
        "--vendor",      "{{user `export_vendor`}}",
        "--vendorurl",   "{{user `export_vendorurl`}}",
        "--version",     "{{user `export_version`}}",
        "--description", "Product:\t\t{{user `export_product`}} <{{user `export_producturl`}}>\nVersion:\t\t{{user `export_version`}}\n\nVendor:\t\t{{user `export_vendor`}} <{{user `export_vendorurl`}}>\nVagrant username:\t{{user `ssh_username`}}\nVagrant password:\t{{user `ssh_password`}}\nRepository:\t\t{{user `export_repository`}}\n\nCPU:\t\t{{user `cpu`}} Core\nMemory:\t\t{{user `ram_size`}} MB\nDISK Size:\t\t{{user `disk_size`}} MB\nInterface WAN:\tNAT\nInterface MGMT:\t{{user `interface_mgmt_bridgeadapter`}}\n\nPackage version:\t{{packer_version}}\nVirtualBox version:\t{{user `virtualbox_version`}}\nBuild time\t\t{{isotime `2018-01-02/150405 MST`}}"

      ],
      "floppy_files": [
      ],
      "floppy_dirs": [
      ],
      "sata_port_count": 1,
      "hard_drive_interface": "sata",
      "disk_size": "{{user `disk_size`}}",
      "hard_drive_discard": false,
      "hard_drive_nonrotational": false,
      "iso_interface": "sata",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_target_extension": "iso",
      "iso_url": "{{user `iso_url`}}",
      "guest_additions_mode": "disable",
      "http_directory": "{{user `http_directory`}}",
      "http_port_min": "8100",
      "http_port_max": "9000",
      "output_directory": "output-{{isotime `2018-03-10/231505 MST`}}",
      "shutdown_command": "sudo shutdown -p now",
      "post_shutdown_delay": "{{user `post_shutdown_delay`}}",
      "shutdown_timeout": "10m",
      "communicator": "ssh",
      "ssh_host": "{{user `ssh_host`}}",
      "ssh_port": 22,
      "ssh_file_transfer_method": "sftp",
      "ssh_timeout": "4h",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_skip_nat_mapping": true,
      "vboxmanage": [

        [ "modifyvm", "{{.Name}}", "--memory",           "{{user `ram_size`}}" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc",        "on"                  ],
        [ "modifyvm", "{{.Name}}", "--paravirtprovider", "kvm"                 ],
        [ "modifyvm", "{{.Name}}", "--vrde",             "on"                  ],
        [ "modifyvm", "{{.Name}}", "--cpus",             "{{user `cpu`}}"      ],
        [ "modifyvm", "{{.Name}}", "--audio",            "none"                ],
        [ "modifyvm", "{{.Name}}", "--pae",              "off"                 ],

        [ "modifyvm", "{{.Name}}", "--nic1",             "nat"                 ],
        [ "modifyvm", "{{.Name}}", "--nicpromisc1",      "allow-all"           ],
        [ "modifyvm", "{{.Name}}", "--cableconnected1",  "on"                  ],

        [ "modifyvm", "{{.Name}}", "--nic2",             "bridged"             ],
        [ "modifyvm", "{{.Name}}", "--nicpromisc2",      "allow-all"           ],
        [ "modifyvm", "{{.Name}}", "--nictype2", 	 "82540EM"             ],
        [ "modifyvm", "{{.Name}}", "--cableconnected2",  "on"                  ],
        [ "modifyvm", "{{.Name}}", "--bridgeadapter2",   "{{user `bridgeadapter`}}" ],

        [ "modifyvm", "{{.Name}}", "--nic3",             "hostonly"            ],
        [ "modifyvm", "{{.Name}}", "--nicpromisc3",      "allow-all"           ],
        [ "modifyvm", "{{.Name}}", "--cableconnected3",  "on"                  ],
        [ "modifyvm", "{{.Name}}", "--hostonlyadapter3", "{{user `interface_mgmt_bridgeadapter0`}}" ],

        [ "modifyvm", "{{.Name}}", "--nic4",             "hostonly"            ],
        [ "modifyvm", "{{.Name}}", "--nicpromisc4",      "allow-all"           ],
        [ "modifyvm", "{{.Name}}", "--cableconnected4",  "on"                  ],
        [ "modifyvm", "{{.Name}}", "--hostonlyadapter4", "{{user `interface_mgmt_bridgeadapter1`}}" ]

      ],
      "virtualbox_version_file": ".vbox_version",
      "vrdp_bind_address": "127.0.0.1"
    }
  ],
  "post-processors": [
        {
            "output": "pfsense-{{user `ssh_username`}}.box",
            "type": "vagrant"
        }
  ],
  "provisioners": [
        {
            "inline": [
                "echo 'Etap provision'"
            ],
            "type": "shell"
        }
  ]
}
